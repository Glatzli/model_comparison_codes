@mastersthesis{schoni_icon_2023,
	title = {{ICON} {Model} {Evaluation}: {A} {Cold} {Air} {Pool} {Case} {Study}},
	copyright = {http://creativecommons.org/licenses/by/4.0/},
	shorttitle = {{ICON} {Model} {Evaluation}},
	url = {https://www.research-collection.ethz.ch/handle/20.500.11850/611435},
	abstract = {The formation of stably stratified nocturnal Cold Air Pools (CAPs) is a frequently observed phenomenon in mountain valleys and sinkholes. Accurate representation of CAPs in numerical weather prediction models is important because they de termine local temperatures, may deteriorate air quality, and promote high-impact weather such as freezing rain. The CAP episode from 15-16 October, 2017, in the Inn Valley (Austria) has been selected for an evaluation of simulations conducted with the Icosahedral Nonhydrostatic (ICON) model 1 km horizontal grid resolution. As this case was part of the Penetration and Interruption of Alpine Foehn (PIANO) field campaign, high abundance of observational data allows for a thorough analy sis of the horizontal and vertical structure of the CAP, as well as of the processes driving the CAP life cycle. The observational data reveals that this CAP episode featured a near-surface air temperature decrease of 17 K during formation and ma ture phase. The vertical expansion of the CAP is limited by a topping inversion at about 1000 m above ground level. ICON exhibits a significant warm bias below the top of the inversion, but manages to simulate the timing of the CAP life cycle well. The emission of longwave radiation from the Earth’s surface towards the atmo sphere proved to be the main mechanism for the simulated cooling, while turbulent heating was responsible for the dissipation of the simulated CAP. The discrepancies between the simulations and observations are mainly related to the representation of radiation and turbulence in the model as well as to the insufficient representation of the complex topography due to a too coarse horizontal resolution of the model.},
	language = {en},
	urldate = {2025-02-07},
	school = {ETH Zurich},
	author = {Schöni, Fabian},
	month = apr,
	year = {2023},
	doi = {10.3929/ethz-b-000611435},
	note = {Accepted: 2023-05-12T12:35:15Z},
	file = {Schöni - 2023 - ICON Model Evaluation A Cold Air Pool Case Study.pdf:C\:\\Users\\eleme\\OneDrive\\Dokumente\\zotmoov\\1_Msc thesis\\Schöni - 2023 - ICON Model Evaluation A Cold Air Pool Case Study.pdf:application/pdf},
