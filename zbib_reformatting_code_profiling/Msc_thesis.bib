	urldate = {2025-01-13},
	journal = {Frontiers in Earth Science},
	author = {Largeron, Yann and Staquet, Chantal},
	month = jul,
	year = {2016},
	note = {Publisher: Frontiers},
	keywords = {Alpine valleys, Atmospheric Boundary Layer, Down-valley wind, grenoble, Persistent inversions, Stable wintertime conditions},
	file = {Largeron und Staquet - 2016 - The Atmospheric Boundary Layer during Wintertime Persistent Inversions in the Grenoble Valleys 1.pdf:C\:\\Users\\eleme\\OneDrive\\Dokumente\\zotmoov\\1_Msc thesis\\Largeron und Staquet - 2016 - The Atmospheric Boundary Layer during Wintertime Persistent Inversions in the Grenoble Valleys 1.pdf:application/pdf},
